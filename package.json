{
  "name": "mapa11y",
  "version": "0.0.1",
  "description": "This plugin provides some filters for people with color vision deficiency in the context of accessibility",
  "keywords": [
    "accessibility",
    "color-blindness",
    "color-vision",
    "a11y",
    "contrast",
    "filter",
    "visual-impairment",
    "inclusive-design",
    "web-accessibility",
    "color-deficiency",
    "vision-helper",
    "ui-enhancement",
    "assistive-technology",
    "color-adjustment"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:terrestris/mapa11y.git"
  },
  "author": {
    "name": "terrestris GmbH & Co. KG",
    "email": "info@terrestris.de",
    "url": "https://www.terrestris.de"
  },
  "contributors": [
    {
      "name": "Michael Holthausen",
      "email": "holthausen@terrestris.de"
    }
  ],
  "license": "BSD-2-Clause",
  "main": "dist/mapa11y.umd.js",
  "module": "dist/mapa11y.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:types": "tsc --project tsconfig.build.json",
    "build": "vite build && npm run build:types ",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "preview": "vite preview",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint && npm test",
    "prepare": "husky",
    "test": "vitest --coverage --no-watch",
    "release": "semantic-release"
  },
  "dependencies": {
    "i18next": ">=24.2.2",
    "i18next-browser-languagedetector": "8.0.4",
